#!/bin/sh
# preinst script for gitthello
#
# see: dh_installdeb(1) $$$

set -e

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
USER="gitthello"
GROUP="$USER"
APP_PATH=/var/www/gitthello

#DEBHELPER#
adduser --home $APP_PATH --shell /bin/bash --system $USER --group
chown -R $USER:$GROUP $APP_PATH
exit 0
